    <% @portfolios.each do |portfolio| %>
      <div class="c-portfolio mb-12 p-6 bg-white shadow-md rounded-2xl border border-gray-200 p-5">
        <h2 class="text-2xl font-bold text-sky-600 mb-2" data-id="<%= portfolio.id %>">
